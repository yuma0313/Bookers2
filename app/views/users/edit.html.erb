<% if @user.errors.any? %>
    <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
        <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
<%= form_with model: @user,local:true do |f| %>
<div class="field">
 <label>Name</label><br>
<%= f.text_field:name %>
</div>
<div class="field">
  <label for="inputImage">Image</label><br>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
</div>
<div class="field">
 <label>Introduction</label><br>
 <%= f.text_area:introduction,autofocus:true %>
</div>
<div class="action">
 <%= f.submit'Update User',class: "action btn btn-secondary" %>
</div>
<% end %>
    </div>
  </div>
</div>